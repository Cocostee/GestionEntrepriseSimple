{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mx-auto">
    <div class="flex justify-center">
        <div class="w-full md:w-1/2">
            <form method="post" class="mt-5">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="text-xl mb-3 font-bold text-center">Me connecter</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full border-gray-300 rounded-md px-4 py-2 mb-3" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="w-full border-gray-300 rounded-md px-4 py-2 mb-3" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="flex items-center mb-3">
                    <input type="checkbox" class="form-checkbox" name="_remember_me" id="rememberMe">
                    <label class="ml-2" for="rememberMe">Remember me</label>
                </div>

                <div class="text-center">
                    <a href="{{ path('app_register') }}">Pas encore inscrit ?</a>
                </div>

                <button class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
